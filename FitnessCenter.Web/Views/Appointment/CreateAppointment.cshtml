@model FitnessCenter.Web.Models.Appointment.AppointmentViewModel;

@{
    ViewData["Title"] = "Crear Cita";
    Layout = null; // No usar el layout predeterminado
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/Appointment/CreateAppointment.css">
</head>

<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-3">
                <img src="~/images/login-logo.png" alt="Logo" class="img-fluid">
            </div>
            <div class="col-md-9 text-center">
                <h2>@ViewData["Title"]</h2>
            </div>
        </div>
        <form asp-action="GetAllUsers" method="get">
            <div class="form-group">
                <label for="Cliente">Cliente</label>
                <select class="form-control" id="Cliente" name="ClienteId">
                    <!-- Opciones de cliente -->
                </select>
            </div>
            <div class="form-group">
                <label for="FechaHora">Fecha y Hora</label>
                <input type="datetime-local" class="form-control" id="FechaHora" name="FechaHora">
            </div>
            <div class="form-group">
                <label for="Entrenador">Entrenador</label>
                <select class="form-control" id="Entrenador" name="EntrenadorId">
                    <!-- Opciones de entrenador -->
                </select>
            </div>
            <div class="form-group">
                <label for="Duracion">Duración (minutos)</label>
                <input type="number" class="form-control" id="DurationInMinutes" name="DurationInMinutes">
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a href="@Url.Action("IndexAppointments", "Appointment")" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/Appointment/CreateAppointment.js"></script>
    <script src="~/js/site.js"></script>

</body>

</html>
