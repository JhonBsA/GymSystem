@{
    ViewData["Title"] = "Editar Cita";
    Layout = null; // No usar el layout predeterminado
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
</head>

<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-3">
                <img src="~/images/login-logo.png" alt="Logo" class="img-fluid">
            </div>
            <div class="col-md-9 text-center">
                <h2>@ViewData["Title"]</h2>
            </div>
        </div>
        <form id="appointmentForm">
            <div class="form-group">
                <label for="Cliente">Cliente</label>
                <select class="form-control" id="Cliente">
                    <!-- Opciones de cliente -->
                </select>
            </div>
            <div class="form-group">
                <label for="FechaHora">Fecha y Hora</label>
                <input type="datetime-local" class="form-control" id="FechaHora">
            </div>
            <div class="form-group">
                <label for="Entrenador">Entrenador</label>
                <select class="form-control" id="Entrenador">
                    <!-- Opciones de entrenador -->
                </select>
            </div>
            <div class="form-group">
                <label for="DurationInMinutes">Duración (minutos)</label>
                <input type="number" class="form-control" id="DurationInMinutes">
            </div>
            <button type="button" class="btn btn-primary" onclick="updateAppointment()">Guardar</button>
            <a href="@Url.Action("Index", "Appointment")" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="~/js/appointment.js"></script>
</body>

</html>
