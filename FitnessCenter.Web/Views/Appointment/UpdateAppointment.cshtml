@model FitnessCenter.Web.Models.Appointment.AppointmentViewModel
@{
    ViewData["Title"] = "Editar Cita";
    Layout = null; // No usar el layout predeterminado
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/Appointment/UpdateAppointment.css">
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-custom fondoNav">
        <a class="navbar-brand" href="#">
            <img src="~/Images/login-logo.png" width="30" height="30" class="d-inline-block align-top" alt="">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Customers" asp-action="Home">Inicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Routine" asp-action="ListRoutines">Rutinas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Customers" asp-action="Appointments">Citas de medición</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Customers" asp-action="Classes">Clases</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Customers" asp-action="Trainings">Entrenamientos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Customers" asp-action="Progress">Progreso</a>
                </li>
                <li class="nav-item">
                    <a class="profile-icon nav-link" asp-controller="Account" asp-action="Profile">
                        <i class="fas fa-user"></i>
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="form-container">
            <form id="updateAppointmentForm" class="form-group">
                <div class="titulo">
                    <h2>Editar Cita de Medicion</h2>
                </div>
                <div class="idAppointment">
                    <p id="appointmentID">ID: </p>
                </div>
                <input type="hidden" id="AppointmentID" name="AppointmentID" />
                <div class="inputContainer">
                    <div class="inputgroup">
                        <div class="form-group">
                            <label for="Cliente">Cliente</label>
                            <input type="text" class="form-control" id="ClientName" name="ClientName" readonly>
                            <input type="hidden" id="ClientID" name="ClientID">
                        </div>
                        <div class="form-group">
                            <label for="Entrenador">Entrenador</label>
                            <select class="form-control" id="Entrenador" name="TrainerId">
                                <!-- Opciones de entrenador -->
                            </select>
                        </div>
                    </div>
                    <div class="inputgroup">
                        <div class="form-group">
                            <label for="FechaHora">Fecha y Hora</label>
                            <input type="datetime-local" class="form-control" id="FechaHora" name="AppointmentDate">
                        </div>
                        <div class="form-group">
                            <label for="Duracion">Duración (minutos)</label>
                            <input type="number" class="form-control" id="DurationInMinutes" name="DurationInMinutes">
                        </div>
                    </div>
                </div>
                <div class="buttons">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a href="@Url.Action("IndexAppointments", "Appointment")" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/Appointment/UpdateAppointment.js"></script>
    <script src="~/js/site.js"></script>
</body>

</html>
