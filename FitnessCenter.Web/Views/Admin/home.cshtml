
@{
    ViewData["Title"] = "Admin Home";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Home Admin</title>
    <link rel="stylesheet" type="text/css" href="~/css/Admin/Home.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header>        
    </header>
   
    <div class="admin-container">
        <nav class="menu-options">
            <ul>
                <li><a id="inicio-landing-page" href="#" class="fs-4" >Inicio</a></li>
                <li><a id="perfil-menu" href="#" class="fs-4" >Perfil</a></li>
            </ul>
        </nav>
            <div class="login-logo">
                <img src="~/images/login-logo.png" alt="Foto logo" />
            </div>
       
        <div class="container text-center">
            <section class="p-5">
            
                <div class="row">
                    <div class="col">
                            <div class="card">
                                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRjLTy--dj9mI60M_10VLokixAWJhMacmp52Q&s" class="card-img-top" alt="group class image">
                                <div class="card-body">
                                    <h5 class="card-title">Clases Grupales</h5>
                                    <p class="card-text">Cardio, baile, aerobicos y mas...</p>
                                    <a href="#" class="btn btn-primary">Ver</a>
                                </div>
                            </div>
                    </div>
                    <div class="col">
                            <div class="card">
                            <img src="https://cdn-icons-png.freepik.com/512/639/639277.png" class="card-img-top" alt="Rutinas,citas img">
                                <div class="card-body">
                                    <h5 class="card-title">Rutinas / Citas </h5>
                                    <p class="card-text">Agendar cita o crear rutinas.</p>
                                    <a href="#" class="btn btn-primary">Agendar / Crear</a>
                                </div>
                            </div>
                    </div>
                    <div class="col">
                            <div class="card">
                            <img src="https://cdn-icons-png.flaticon.com/512/749/749555.png" class="card-img-top" alt="pagos y clientes img">
                                <div class="card-body">
                                    <h5 class="card-title">Clientes / Pagos</h5>
                                    <p class="card-text">Status de cliente, pagos matriculas, mensualidades.</p>
                                    <a href="#" class="btn btn-primary">Validar</a>
                                </div>
                            </div>
                    </div>
               
                </div>
                <div class="row">
                    <div class="col">
                        <div class="card">
                            <img src="https://cdn-icons-png.flaticon.com/512/3936/3936976.png" class="card-img-top" alt="descuento img">
                            <div class="card-body">
                                <h5 class="card-title">Descuentos</h5>
                                <p class="card-text">Matriculas, mesualidades, cupones y mas...</p>
                                <a href="#" class="btn btn-primary">Ver</a>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card">
                            <img src="https://cdn-icons-png.flaticon.com/512/3126/3126647.png" class="card-img-top" alt="control de clientes img">
                            <div class="card-body">
                                <h5 class="card-title">Control Clientes </h5>
                                <p class="card-text">Tipo mensualidad, estado de pagos...</p>
                                <a href="#" class="btn btn-primary">Verificar</a>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card">
                            <img src="https://cdn-icons-png.flaticon.com/512/2211/2211680.png" class="card-img-top" alt="roles ">
                            <div class="card-body">
                                <h5 class="card-title">Roles</h5>
                                <p class="card-text">Roles de usuarios.</p>
                                <a href="#" class="btn btn-primary">Gestionar Accesos Usuarios</a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- <script src="~/js/Admin/login.js"></script> -->
</body>
</html>

