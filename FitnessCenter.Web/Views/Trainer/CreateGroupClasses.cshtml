@model FitnessCenter.Web.Models.Trainer.GroupClassViewModel;

@{
    ViewData["Title"] = "Crear Clases Grupales";
    Layout = null; // No usar el layout predeterminado
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/Trainer/CreateGroupClasses.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-custom fondoNav">
        <a class="navbar-brand" href="@Url.Action("HomeReceptionist", "Receptionist")">
            <img src="../Images/login-logo.png" width="30" height="30" class="d-inline-block align-top" alt="">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Receptionist" asp-action="HomeReceptionist">Inicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Appointment" asp-action="ListAppointments">Citas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Customers" asp-action="ListCustomers">Clientes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Trainer" asp-action="ListGroupClasses">Clases Grupales</a>
                </li>
                <li class="nav-item">
                    <a class="profile-icon nav-link" asp-controller="Receptionist" asp-action="Profile">
                        <i class="fas fa-user"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="LandingPage" asp-action="LandingPage">
                        <i class="fas fa-sign-out-alt"></i> <!-- Icono de salir -->
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="form-container">
            <form id="createGroupClassesForm" class="form-group">
                <div class="titulo">
                    <h2>Crear Nueva Clase Grupal</h2>
                </div>
                <div class="inputContainer">
                    <div class="inputgroup">
                        <div class="form-group">
                            <label for="Nombre">Nombre de la Clase</label>
                            <input class="form-control" id="Nombre" name="Nombre">
                        </div>
                        <div class="form-group">
                            <label for="Entrenador">Instructor</label>
                            <select class="form-control" id="Entrenador" name="EntrenadorId">
                                <!-- Opciones de entrenador -->
                            </select>
                        </div>
                    </div>
                    <div class="inputgroup">
                        <div class="form-group">
                            <label for="FechaHora">Fecha y Hora</label>
                            <input type="datetime-local" class="form-control" id="FechaHora" name="FechaHora">
                        </div>
                        <div class="form-group">
                            <label for="Cupo">Cupo</label>
                            <input class="form-control" id="Cupo" name="Cupo">
                        </div>
                    </div>
                </div>
                <div class="buttons">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a href="@Url.Action("HomeReceptionist", "Receptionist")" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/Trainer/CreateGroupClasses.js"></script>
    <script src="~/js/site.js"></script>

</body>

</html>