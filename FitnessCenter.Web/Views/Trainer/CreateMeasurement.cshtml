
@{
    ViewData["Title"] = "Crear Cita de Medición";
    Layout = null; // No usar el layout predeterminado
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/Trainer/CreateMeasurement.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-custom fondoNav">
        <a class="navbar-brand" href="@Url.Action("Home", "Trainer")">
            <img src="~/Images/login-logo.png" width="30" height="30" class="d-inline-block align-top" alt="">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Trainer" asp-action="Home">Inicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Routine" asp-action="CreateRoutine">Asignar rutina</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Trainer" asp-action="CreateAppointment">Entrenamiento personal</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Trainer" asp-action="CreateMeasurement">Cita de medición</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Trainer" asp-action="CreateExercise">Crear ejercicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Trainer" asp-action="CreateExerciseType">Crear tipo de ejercicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Trainer" asp-action="CreateEquipment">Crear equipo</a>
                </li>
                <li class="nav-item">
                    <a class="profile-icon nav-link" asp-controller="Account" asp-action="Profile">
                        <i class="fas fa-user"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a id="logoutButton" class="nav-link">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="form-container">
            <form id="createMeasurementForm" class="form-group">
                <div class="titulo">
                    <h2>Crear Cita de Medición</h2>
                </div>
                <div class="inputContainer">
                    <div class="inputgroupTop">
                        <div class="form-group">
                            <label for="Email">Correo Electrónico</label>
                            <input type="text" class="form-control" id="Email" name="Email">
                        </div>
                        <div class="form-group">
                            <label for="Entrenador">Entrenador</label>
                            <select class="form-control" id="Entrenador" name="EntrenadorId">
                                <!-- Opciones de entrenador -->
                            </select>
                        </div>
                    </div>
                    <div class="inputgroupDown">
                        <div class="form-group">
                            <label for="weight">Peso</label>
                            <input type="number" class="form-control" id="weight" name="weight">
                        </div>
                        <div class="form-group">
                            <label for="height">Altura</label>
                            <input type="number" class="form-control" id="height" name="height">
                        </div>
                        <div class="form-group">
                            <label for="bodyFatPercentage">Porcentaje de Grasa Corporal</label>
                            <input type="number" class="form-control" id="bodyFatPercentage" name="bodyFatPercentage">
                        </div>
                        <div class="form-group">
                            <label for="age">Edad</label>
                            <input type="number" class="form-control" id="age" name="age">
                        </div>
                        <div class="form-group">
                            <label for="gender">Género</label>
                            <input type="tel" class="form-control" id="gender" name="gender">
                        </div>
                    </div>
                </div>
                <div class="buttons">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a href="@Url.Action("Home", "Trainer")" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/Trainer/CreateMeasurement.js"></script>
    <script src="~/js/site.js"></script>

</body>

</html>
