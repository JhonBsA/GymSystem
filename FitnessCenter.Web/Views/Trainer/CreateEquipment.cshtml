@{
    ViewData["Title"] = "Home";
    Layout = null; // No usar el layout predeterminado
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/Customers/Home.css">
    <link rel="stylesheet" href="~/css/Trainer/CreateEquipment.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>


<body>
    <nav class="navbar navbar-expand-lg navbar-custom fondoNav">
        <a class="navbar-brand" asp-controller="Trainer" asp-action="Home">
            <img src="../Images/login-logo.png" width="30" height="30" class="d-inline-block align-top" alt="">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Trainer" asp-action="Home">Inicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Routine" asp-action="CreateRoutine">Asignar rutina</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Trainer" asp-action="CreateAppointment">Entrenamiento personal</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Trainer" asp-action="CreateMeasurement">Cita de medición</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Trainer" asp-action="CreateExercise">Crear ejercicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Trainer" asp-action="CreateExerciseType">Crear tipo de ejercicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Trainer" asp-action="CreateEquipment">Crear equipo</a>
                </li>
                <li class="nav-item">
                    <a class="profile-icon nav-link" asp-controller="Trainer" asp-action="Profile">
                        <i class="fas fa-user"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a id="logoutButton" class="nav-link">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </li>

            </ul>
        </div>
    </nav>


    <div class="form-container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="form-box w-100" style="max-width: 500px;">
            <h1 class="text-center textBlanco">Crear Equipo</h1>
            <form id="Form">
                <div class="form-group text-center">
                    <label for="name" class="d-block">Nombre</label>
                    <input type="text" class="form-control mx-auto" id="name" name="Name" placeholder="Ingrese el nombre" required style="max-width: 400px;">
                </div>
                <div class="form-group text-center">
                    <label for="type" class="d-block">Tipo</label>
                    <input type="text" class="form-control mx-auto" id="type" name="Type" placeholder="Ingrese el tipo" required style="max-width: 400px;">
                </div>
                <button type="submit" class="btn btn-primary d-block mx-auto">Guardar</button>
            </form>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/Trainer/CreateEquipment.js"></script>
    <script src="~/js/site.js"></script>
</body>

</html>

