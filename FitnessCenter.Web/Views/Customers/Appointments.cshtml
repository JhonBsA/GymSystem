    <h2 class="tituloh2">Agenda tu cita de medición</h2>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8">
                <div id="calendar"></div>
            </div>
            <div class="col-md-4">
                <div id="event-details">
                    <h5 id="event-date"></h5>
                    <p id="event-time"></p>
                    <p id="event-type"></p>
                    <p id="availability-message"></p>
                    <button id="confirm-appointment" class="btn btn-primary">Confirmar Cita</button>
                    <button id="cancel-appointment" class="btn btn-secondary">Cancelar</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var availableSlots = [
                '2024-08-13T16:00:00',
                '2024-08-13T17:00:00',
                '2024-08-14T15:00:00'
                // Añade aquí más horarios disponibles
            ];

            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                locale: 'es',
                selectable: true,
                dateClick: function (info) {
                    var selectedDate = info.dateStr;
                    var isAvailable = availableSlots.some(slot => slot.startsWith(selectedDate));

                    if (isAvailable) {
                        $('#event-date').text('Fecha: ' + selectedDate);
                        $('#event-time').text('Hora: ' + selectedDate); // Ajusta según sea necesario
                        $('#event-type').text('Cita para medición');
                        $('#availability-message').text('');
                        $('#confirm-appointment').show(); // Mostrar botón de confirmación
                        $('#event-details').show();

                        $('#confirm-appointment').off().on('click', function () {
                            $.ajax({
                                url: '/api/appointments', // Cambia esto al endpoint de tu servidor
                                method: 'POST',
                                data: {
                                    date: selectedDate,
                                    // Incluye otros datos si es necesario
                                },
                                success: function () {
                                    calendar.addEvent({
                                        title: 'Cita de medición confirmada',
                                        start: selectedDate,
                                        end: selectedDate // Ajusta según sea necesario
                                    });
                                    $('#event-details').hide();
                                },
                                error: function () {
                                    alert('Error al confirmar la cita');
                                }
                            });
                        });

                        $('#cancel-appointment').off().on('click', function () {
                            $('#event-details').hide();
                        });
                    } else {
                        $('#event-date').text('Fecha: ' + selectedDate);
                        $('#event-time').text('');
                        $('#event-type').text('');
                        $('#availability-message').text('No hay citas disponibles para esta fecha.');
                        $('#confirm-appointment').hide(); // Ocultar botón de confirmación
                        $('#event-details').show();
                    }
                },
                events: [
                    {
                        title: 'Cita de medición con el entrenador',
                        start: '2024-08-13T16:00:00',
                        end: '2024-08-13T17:00:00'
                    },
                    {
                        title: 'Cita 2',
                        start: '2024-08-14T15:00:00',
                        end: '2024-08-14T16:00:00'
                    }
                ]
            });
            calendar.render();
        });
    </script>
</body>
