@{
    ViewData["Title"] = "Trainings";
    Layout = null; // No usar el layout predeterminado
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clases Grupales</title>
    <link rel="stylesheet" type="text/css" href="~/css/Customers/Home.css" />
    <link rel="stylesheet" type="text/css" href="~/css/Customers/Training.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://unpkg.com/fullcalendar@5.10.2/main.min.css">
    <style>
        #calendar {
            max-width: 1200px; /* Ajusta el tamaño general del calendario */
            margin: 0 auto;
        }

        #event-details {
            display: none;
        }
        /* Personalizar el color de los números de los días */
        .fc-daygrid-day-number {
            color: #000000; /* Color de los números de los días */
        }
        /* Personalizar el color de fondo de los días */
        .fc-daygrid-day {
            background-color: #f8f9fa; /* Color de fondo de los días */
        }
            /* Personalizar el color de los días laborables */
            .fc-daygrid-day.fc-day-today {
                background-color: #e0f7fa; /* Color de fondo del día actual */
            }
        /* Personalizar el estilo de los eventos */
        .fc-event {
            background-color: #5ee07c; /* Color de fondo del evento */
            border: none; /* Sin borde */
        }

            .fc-event:hover {
                background-color: #69d681; /* Color de fondo del evento al pasar el ratón */
            }
        /* Personalizar el color de los días seleccionados */
        .fc-daygrid-day.fc-daygrid-day-selected {
            background-color: #d1c4e9; /* Color de fondo del día seleccionado */
        }
        /* Ajustar el tamaño de las celdas del calendario */
        .fc-daygrid-day-frame {
            height: 10px; /* Ajusta la altura de las celdas */
        }

        .fc-daygrid-day-top {
            display: flex;
            justify-content: center; /* Centra los números de los días */
        }

        .fc-daygrid-day {
            padding: 10px; /* Añade relleno a las celdas */
        }

        .card {
            margin-top: 20px;
        }
    </style>
</head>
<body class="fondo">
    <nav class="navbar navbar-expand-lg navbar-custom fondoNav">
        <a class="navbar-brand" href="#">
            <img src="../Images/login-logo.png" width="30" height="30" class="d-inline-block align-top" alt="">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Customers" asp-action="Home">Inicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Routine" asp-action="ListRoutines">Rutinas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Customers" asp-action="Appointments">Citas de medición</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Customers" asp-action="Classes">Clases</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Customers" asp-action="Trainings">Entrenamientos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Customers" asp-action="Progress">Progreso</a>
                </li>
                <li class="nav-item">
                    <a class="profile-icon nav-link" asp-controller="Account" asp-action="Profile">
                        <i class="fas fa-user"></i>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8">
                <div id="calendar"></div>
            </div>
            <div class="col-md-4">
                <div id="event-details" class="card">
                    <div class="card-body">
                        <h5 class="card-title" id="event-date"></h5>
                        <p class="card-text" id="event-time"></p>
                        <p class="card-text" id="event-type"></p>
                        <button id="reserve-button" class="btn btn-primary">Reservar Sesión</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://unpkg.com/fullcalendar@5.10.2/main.min.js"></script>
    <script src="https://unpkg.com/fullcalendar@5.10.2/locales/es.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                locale: 'es', // Cambiar el idioma a español
                dateClick: function (info) {
                    alert('Fecha seleccionada: ' + info.dateStr);
                },
                events: [
                    {
                        title: 'Entrenador 1',
                        start: '2024-08-07T10:00:00',
                        end: '2024-08-07T11:00:00',
                        extendedProps: {
                            trainer: 'Entrenador 1',
                        }
                    },
                    // Más eventos...
                ],
                eventClick: function (info) {
                    $('#event-date').text(info.event.start.toLocaleDateString());
                    $('#event-time').text(info.event.start.toLocaleTimeString());
                    $('#event-type').text('Entrenador: ' + info.event.extendedProps.trainer);
                    $('#event-details').show();
                    $('#reserve-button').off().on('click', function () {
                        // Redirigir al usuario a la página de reserva
                        const selectedDate = $('#event-date').text();
                        const selectedTime = $('#event-time').text();
                        const selectedTrainer = $('#event-type').text().split(': ')[1];

                        window.location.href = `/reservar?trainer=${encodeURIComponent(selectedTrainer)}&date=${encodeURIComponent(selectedDate)}&time=${encodeURIComponent(selectedTime)}`;
                    });
                }
            });
            calendar.render();
        });
    </script>
</body>
</html>
