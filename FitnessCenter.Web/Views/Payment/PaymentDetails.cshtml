@{
    ViewData["Title"] = "Resumen de Citas del Dia";
    Layout = null; // No usar el layout predeterminado
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Payment/PaymentDetails.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-custom fondoNav">
        <a class="navbar-brand" href="@Url.Action("HomeReceptionist", "Receptionist")">
            <img src="../Images/login-logo.png" width="30" height="30" class="d-inline-block align-top" alt="">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Receptionist" asp-action="HomeReceptionist">Inicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Appointment" asp-action="ListAppointments">Citas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Customers" asp-action="ListCustomers">Clientes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Trainer" asp-action="ListGroupClasses">Clases Grupales</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Payment" asp-action="ListPayments">Pagos</a>
                </li>
                <li class="nav-item">
                    <a class="profile-icon nav-link" asp-controller="Account" asp-action="Profile">
                        <i class="fas fa-user"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="LandingPage" asp-action="LandingPage">
                        <i class="fas fa-sign-out-alt"></i> <!-- Icono de salir -->
                    </a>
                </li>
            </ul>
        </div>
    </nav>

        <header class="titulo">
            <h1>Detalles de Pago</h1>
        </header>

    <div class="container">
        <section class="info-cliente">
            <h2>Información del cliente</h2>
            <p><strong>Nombre completo:</strong> <span id="nombre-completo"></span></p>
            <p><strong>Cédula:</strong> <span id="cedula"></span></p>
            <p><strong>Teléfono:</strong> <span id="telefono"></span></p>
            <p><strong>Email:</strong> <span id="email"></span></p>
            <p><strong>Estado:</strong> <span id="estado"></span></p>
        </section>

        <section class="info-pago">
            <h2>Información del pago</h2>
            <p><strong>Fecha de Pago:</strong> <span id="fecha-pago"></span></p>
            <p><strong>Método de Pago:</strong> <span id="metodo-pago"></span></p>
            <p><strong>Monto:</strong> <span id="monto"></span></p>
        </section>

    </div>
    <div class="buttons">
        <button onclick="window.location.href='@Url.Action("ListPayments", "Payment")'"  id="atras-btn" class="btn btn-primary">Atrás</button>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/Payment/PaymentDetails.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
